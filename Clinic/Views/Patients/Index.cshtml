@model IEnumerable<Clinic.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TobaccoUsage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alchol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.History)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var photoPath = "~/images/" + (item.Image ?? "noimage.png");
        <tr>
            <td>
                <h5>@item.Name</h5>
            </td>
            <td>
                <h5>@item.Gender</h5>
            </td>
            <td>
                <h5>@item.Age</h5>
            </td>
            <td>
                <img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" />
            </td>
            <td>
                <h5>@item.Mobile</h5>
            </td>
            <td>
                <h5>@item.TobaccoUsage</h5>
            </td>
            <td>
                <h5>@item.Alchol</h5>
            </td>
            <td>
                <h5>@item.History</h5>

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

