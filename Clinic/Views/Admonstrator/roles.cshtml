@model IEnumerable<IdentityRole>

@{
    ViewBag.title = "Roles";
}
<h1>All Roles</h1>
<a asp-action="CreateRole" asp-controller="admonstrator" class="btn btn-primary">Create+</a>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
               Role
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-controller="Admonstrator" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Admonstrator" asp-action="CreateRole" class="btn btn-primary">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created.
        </div>
        <div class="card-body">
            <h5 class="card-title">Use Button Below To Create Role</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a asp-controller="Admonstrator" asp-action="CreateRole" class="btn btn-primary">Create Role</a>
        </div>
    </div>
}