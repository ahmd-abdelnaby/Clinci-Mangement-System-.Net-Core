@model Clinic.Views.Admonstrator.EfitRoleViewMode
@{ 
    ViewBag.title = "Edit Role";
}

<h1>Edit Role</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ID" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Roles" asp-controller="Admonstrator">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Users in this Role
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No Users Here</h5>

            }
        </div>
        <div class="card-footer">
            <a asp-controller="Admonstrator" asp-action="EditUsersInRole" asp-route-RoleId="@Model.ID" class="btn btn-primary">Add User</a>
        </div>
    </div>
</form>